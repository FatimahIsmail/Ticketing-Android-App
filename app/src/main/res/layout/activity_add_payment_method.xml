                android:layout_marginLeft="10dp"
                android:layout_below="@+id/paymentImg"
                android:textColor="#000000"/>

        </LinearLayout>

        <TextView
            android:id="@+id/div3"
            android:layout_width="match_parent"
            android:layout_height="5dp"
